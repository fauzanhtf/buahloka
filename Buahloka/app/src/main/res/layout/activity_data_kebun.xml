<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_data_kebun"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.calcatz.buahloka.DataKebun"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/topbartipu" />
    <TextView
        android:text="Data Kebun"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView123"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:background="#4bab25"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@color/bualoka_theme">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/logo_bualoka"
                android:id="@+id/imageView6" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/logo_bualoka"
                android:id="@+id/imageView7"
                android:layout_marginRight="10dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/logo_bualoka"
                android:id="@+id/imageView8"
                android:layout_marginRight="10dp" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bualoka_theme"
        android:paddingTop="10dp"
        android:paddingLeft="5dp">

        <TextView
            android:text="Lokasi Kebun:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txLokasiKebun"
            android:textColor="#FFFFFF"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />


        <TextView
            android:text="Tanggal Panen Terakhir:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txTglPanen"
            android:textColor="#FFFFFF"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <TextView
            android:text="Bulan Panen Selanjutnya:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txNextPanen"
            android:textColor="#FFFFFF"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

    </LinearLayout>


</LinearLayout>
