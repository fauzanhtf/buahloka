<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4bab25"
    android:padding="4dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:id="@+id/imgUser"
            app:srcCompat="@drawable/ic_menu_profile" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Pembeli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPsnPembeli"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
            android:textColor="#FFFFFF"/>

        <TextView
            android:text="Alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPsnAlamat"
            android:textColor="#FFFFFF"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"/>

        <TextView
            android:text="Jumlah Beli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPsnJumlah"
            android:textColor="#FFFFFF"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

        <TextView
            android:text="Status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPsnStatus"
            android:textColor="#FFFFFF"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

        <TextView
            android:text="Harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textPsnHarga"
            android:textColor="#FFFFFF"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />
    </LinearLayout>

</LinearLayout>
